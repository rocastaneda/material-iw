@import 'variables.pcss';

.loader {
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0%;
  left: 0;
  right: 0%;
  background-color: rgba(255, 255, 255, 0.95);
  z-index: 999;
  overflow-y: hidden;
  transition-property: visibility, opacity;
  transition-duration: 0s, 1s;
}

.spinner-border {
  color: var(--color-crown-of-thorns);
  position: absolute;
  top: 50%;
  left: 50%;
}
